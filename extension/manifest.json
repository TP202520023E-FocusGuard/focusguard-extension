{
  "manifest_version": 3,
  "name": "FocusGuard - Alerta YouTube",
  "version": "0.1.0",
  "description": "Alerta cuando ingresas a YouTube para evitar procrastinar.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusGuard"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
